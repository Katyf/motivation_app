<p id="notice"><%= notice %></p>
<h1>Tasks Page</h1>
<tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td><br>
        <td><%= link_to 'Show', task %></td><br>
        <td><%= link_to 'Edit', edit_task_path(task) %></td><br>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="button">
<%= link_to 'New Task', new_task_path %>
</div>
